<h1>Stores</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Average Rating</th>
    </tr>
  </thead>
  <tbody>
    <% @stores.each do |store| %>
      <tr>
        <td><%= link_to store.name, store_path(store) %></td>
        <td><%= store.address %></td>
        <td><%= store.average_rating %></td>
      </tr>
    <% end %>
  </tbody>
</table>
